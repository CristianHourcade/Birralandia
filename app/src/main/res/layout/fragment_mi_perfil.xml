<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MiPerfilFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        design:cardBackgroundColor="#eee">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="417dp"
                android:layout_height="500dp"
                design:cardBackgroundColor="#FFFFFF"
                design:layout_constraintEnd_toEndOf="parent"
                design:layout_constraintStart_toStartOf="parent"
                design:layout_constraintTop_toBottomOf="@+id/cardView" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="30dp"
                        >

                        <Button
                            android:id="@+id/button6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Administrar Notificaciones" />

                        <Button
                            android:id="@+id/button8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sobre Birralandia" />

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Terminos y condiciones" />

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ayuda" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                design:layout_constraintEnd_toEndOf="parent"
                design:layout_constraintStart_toStartOf="parent"
                design:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        android:background="@drawable/corner_bottom"
                        design:cardBackgroundColor="#EEB517"
                        design:layout_constraintEnd_toEndOf="parent"
                        design:layout_constraintStart_toStartOf="parent"
                        design:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="138dp"
                                android:layout_height="158dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/boy"
                                design:layout_constraintBottom_toBottomOf="parent"
                                design:layout_constraintEnd_toEndOf="parent"
                                design:layout_constraintHorizontal_bias="0.498"
                                design:layout_constraintStart_toStartOf="parent"
                                design:layout_constraintTop_toTopOf="parent"
                                design:layout_constraintVertical_bias="0.062" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="¡Hola Cristian!"
                                android:textColor="#ffffff"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                design:layout_constraintBottom_toBottomOf="parent"
                                design:layout_constraintEnd_toEndOf="parent"
                                design:layout_constraintHorizontal_bias="0.497"
                                design:layout_constraintStart_toStartOf="parent"
                                design:layout_constraintTop_toBottomOf="@+id/imageView3"
                                design:layout_constraintVertical_bias="0.062" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="335dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="8dp"
                                android:text="Acá vas a poder modificar y llevar un control de tu Birralandia."
                                android:textAlignment="center"
                                android:textSize="18dp"
                                design:layout_constraintBottom_toBottomOf="parent"
                                design:layout_constraintEnd_toEndOf="parent"
                                design:layout_constraintStart_toStartOf="parent"
                                design:layout_constraintTop_toBottomOf="@+id/textView5" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>